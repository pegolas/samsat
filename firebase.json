{
  "hosting": {

    "public": "public",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "headers": [ {
      "source": "**/*.@(|woff|woff2)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=31536000"
      } ]
    },{
      "source": "**/*.@(js|css|scss)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=3600"
      } ]
    }, {
      "source": "**/*.@(jpg|jpeg|gif|png|webp)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=3600"
      } ]
    }, {
      "source": "404.html",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=3600"
      } ]
    } ]
  }
}
